<p id="notice"><%= notice %></p>

<h1>Poopsticks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poopsticks.each do |poopstick| %>
      <tr>
        <td><%= poopstick.name %></td>
        <td><%= poopstick.age %></td>
        <td><%= link_to 'Show', poopstick %></td>
        <td><%= link_to 'Edit', edit_poopstick_path(poopstick) %></td>
        <td><%= link_to 'Destroy', poopstick, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Poopstick', new_poopstick_path %>
